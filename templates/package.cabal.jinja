cabal-version: 3.0
name: {{ packageName }}
version: {{ packageVersion }}
library
  build-depends:
  {% for dependency in buildDepends %}
    {{ dependency.value }},
  {% endfor %}
  exposed-modules:
  {% for module in exposedModules %}
    {{ module.value }}
  {% endfor %}
  {% if !(defaultExtensions | empty) %}
  default-extensions:
  {% for defaultExtension in defaultExtensions %}
    {{ defaultExtension.value }}
  {% endfor %}
  {% endif %}
